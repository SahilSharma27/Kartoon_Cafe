<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="4dp">

                <FrameLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="start"
                    android:padding="4dp">

                    <FrameLayout
                        android:id="@+id/reserveanim"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/happymarker"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="BOOK A TABLE"
                        android:textColor="@color/white"
                        android:textSize="25sp" />
                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="end|center"
                    android:layout_margin="10dp"
                    android:outlineSpotShadowColor="@color/myOrange"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/happymarker"
                            android:text="For :"
                            android:textColor="@color/textColor" />

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/happymarker"
                            android:gravity="start"
                            android:text="userName"
                            android:textAllCaps="true"
                            android:textColor="@color/textColor" />

                        <TextView
                            android:id="@+id/usercontact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/happymarker"
                            android:gravity="start"
                            android:text="contact"
                            android:textAllCaps="true"
                            android:textColor="@color/textColor" />

                        <TextView
                            android:id="@+id/useremail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/happymarker"
                            android:gravity="start"
                            android:text="Email"
                            android:textColor="@color/textColor" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/date_icon_drawable"
                android:drawablePadding="10dp"
                android:fontFamily="@font/happymarker"
                android:padding="15dp"
                android:text="SELECT DATE "
                android:textColor="@color/textColor"
                android:textSize="20sp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dateview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/timeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/time_icon_drawable"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/happymarker"
                    android:padding="15dp"
                    android:text="SELECT TIME"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/timeview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/numLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ppl_icon_drawable"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/happymarker"
                    android:padding="15dp"
                    android:text="NO. OF PEOPLE"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/numberview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:outlineSpotShadowColor="@color/myOrange"
                app:cardUseCompatPadding="true">

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/happymarker"
                            android:padding="15dp"
                            android:text="SPECIAL OCCASSION ? "
                            android:textColor="@color/textColor"
                            android:textSize="20sp" />

                        <CheckBox
                            android:id="@+id/special_birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:buttonTint="@color/myOrange"
                            android:fontFamily="@font/happymarker"
                            android:text="BIRTHDAY"
                            android:textColor="@color/textColor" />

                        <CheckBox
                            android:id="@+id/special_anni"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:buttonTint="@color/myOrange"
                            android:fontFamily="@font/happymarker"
                            android:text="ANNIVERSARY"
                            android:textColor="@color/textColor" />

                        <CheckBox
                            android:id="@+id/special_party"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:buttonTint="@color/myOrange"
                            android:fontFamily="@font/happymarker"
                            android:text="PARTY"
                            android:textColor="@color/textColor" />
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/special_anim"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end" />

                </androidx.coordinatorlayout.widget.CoordinatorLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:outlineSpotShadowColor="@color/myOrange"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/order_ahead_check_box"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:buttonTint="@color/myOrange"
                            android:fontFamily="@font/happymarker"
                            android:padding="10dp"
                            android:text="ORDER AHEAD ?"
                            android:textColor="@color/textColor"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/reservation_menu_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:backgroundTint="@color/myOrange"
                            android:text="Check Menu"
                            android:textColor="@color/white"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/order_ahead_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/happymarker"
                                android:padding="15dp"
                                android:text="CART ITEMS"
                                android:textColor="@color/textColor"
                                android:textSize="20sp" />

                            <!--                            <TextView-->
                            <!--                                android:id="@+id/reservation_cart_qty"-->
                            <!--                                android:layout_width="wrap_content"-->
                            <!--                                android:layout_height="wrap_content"-->
                            <!--                                android:fontFamily="@font/happymarker"-->
                            <!--                                android:padding="15dp"-->
                            <!--                                android:text="Items : 0"-->
                            <!--                                android:textColor="@color/textColor"-->
                            <!--                                android:textSize="15sp" />-->

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:background="@color/dividerColor" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/order_ahead_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/reservation_cart_payable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:outlineSpotShadowColor="@color/myOrange"
                android:visibility="gone"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/happymarker"
                        android:padding="15dp"
                        android:text="Payable"
                        android:textColor="@color/textColor"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:background="@color/dividerColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:fontFamily="@font/happymarker"
                                android:gravity="end"
                                android:text="SubTotal  :"
                                android:textColor="@color/textColor" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:fontFamily="@font/happymarker"
                                android:gravity="end"
                                android:text="TAX  :"
                                android:textColor="@color/textColor" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:fontFamily="@font/happymarker"
                                android:gravity="end"
                                android:text="GrandTotal  :"
                                android:textColor="@color/textColor" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/order_ahead_subtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:fontFamily="@font/happymarker"
                                android:gravity="end"
                                android:text=" $100"
                                android:textColor="@color/textColor" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:fontFamily="@font/happymarker"
                                android:gravity="end"
                                android:text=" 5%"
                                android:textColor="@color/textColor" />

                            <TextView
                                android:id="@+id/order_ahead_grand_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:fontFamily="@font/happymarker"
                                android:gravity="end"
                                android:text=" $118"
                                android:textColor="@color/textColor" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/reservation_cart_paymentOptn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:outlineSpotShadowColor="@color/myOrange"
                android:visibility="gone"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/happymarker"
                        android:padding="15dp"
                        android:text="Payment Method"
                        android:textColor="@color/textColor"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:background="@color/dividerColor" />

                    <RadioGroup
                        android:id="@+id/order_ahead_payment_method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@color/white">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/myOrange"
                            android:fontFamily="@font/happymarker"
                            android:text="CASH"
                            android:checked="true"
                            android:textColor="@color/textColor" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/myOrange"
                            android:fontFamily="@font/happymarker"
                            android:text="CARD / UPI / NETBANKING"
                            android:textColor="@color/textColor" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:outlineSpotShadowColor="@color/myOrange"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/happymarker"
                        android:padding="15dp"
                        android:text="ADDITIONAL REQUESTS"
                        android:textColor="@color/textColor"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/reservation_editxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:backgroundTint="@color/myOrange"
                        android:inputType="text"
                        android:lines="3"
                        android:padding="4dp"
                        android:textColor="@color/textColor" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/kartoon_cafe" />

            <View
                android:layout_width="match_parent"
                android:layout_height="70dp" />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/reservation_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_margin="4dp"
        android:background="@color/myOrange"
        android:fontFamily="@font/happymarker"
        android:text="Confirm"
        android:textColor="@color/white"

        />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
