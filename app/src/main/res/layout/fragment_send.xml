<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="10dp"
        android:gravity="center"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/account_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:src="@drawable/ic_person_black_24dp" />

            <TextView
                android:id="@+id/account_firstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/account_img"
                android:fontFamily="@font/happymarker"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:textAllCaps="true"
                android:text="FN"
                android:textColor="@color/textColor"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/account_lastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/account_firstName"
                android:layout_toEndOf="@id/account_img"
                android:fontFamily="@font/happymarker"
                android:paddingStart="15dp"
                android:text="LN"
                android:textAllCaps="true"
                android:textColor="@color/textColor"
                android:textSize="30sp" />

            <LinearLayout
                android:id="@+id/mail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/account_img"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_email_black_24dp" />

                <TextView
                    android:id="@+id/account_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/happymarker"
                    android:padding="10dp"
                    android:text="27decsahilsharma@gmail.com"
                    android:textColor="@color/textColor" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/account_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mail_layout"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_call_black_24dp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/happymarker"
                    android:padding="10dp"
                    android:id="@+id/user_contact"
                    android:hint="Contact"
                    android:inputType="number"
                    android:textColor="@color/textColor" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/account_contact"
                android:layout_margin="10dp"
                android:id="@+id/account_mail_layout"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_location_on_black_24dp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/happymarker"
                    android:padding="10dp"
                    android:id="@+id/user_address"
                    android:hint="Location"
                    android:textColor="@color/textColor" />


                <Button
                    android:id="@+id/get_location"
                    android:layout_width="25dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_my_location_black_24dp"
                    android:elevation="4dp" />

            </LinearLayout>

            <Button
                android:id="@+id/save_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/account_mail_layout"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:fontFamily="@font/happymarker"
                android:padding="10dp"
                android:text="Save"
                android:textColor="@color/myOrange" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/log_out_card"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/happymarker"
            android:padding="15dp"
            android:text="log out"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>