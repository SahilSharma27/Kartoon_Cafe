<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/account_details1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/side_nav_bar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/account_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/ic_person_black_24dp" />

        <TextView
            android:id="@+id/account_firstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/happymarker"
            android:text="FN"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/account_lastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/happymarker"
            android:text="LN"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/account_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_details1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/happymarker"
            android:padding="10dp"
            android:text="Email"
            android:textColor="@color/myOrange"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/account_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/happymarker"
            android:padding="10dp"
            android:textColor="@color/textColor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="@color/dividerColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/happymarker"
            android:padding="10dp"
            android:text="Contact"
            android:textColor="@color/myOrange"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/user_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/happymarker"
            android:hint="Add your contact"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/textColor"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="@color/dividerColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/happymarker"
            android:padding="10dp"
            android:text="Location"
            android:textColor="@color/myOrange"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/account_mail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/user_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/happymarker"
                android:hint="Add your Location"
                android:padding="10dp"
                android:textColor="@color/textColor"
                android:textSize="15sp" />


            <Button
                android:id="@+id/get_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:drawableTop="@drawable/ic_my_location_black_24dp"
                android:drawablePadding="2dp"
                android:elevation="4dp"
                android:padding="2dp"
                android:text="Locate" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="@color/dividerColor" />
    </LinearLayout>

    <Button
        android:id="@+id/save_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_details"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:fontFamily="@font/happymarker"
        android:text="Save"
        android:textColor="@color/myOrange" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/save_details"
        android:layout_marginTop="10dp"
        android:src="@drawable/kartoon_cafe" />

    <androidx.cardview.widget.CardView
        android:id="@+id/log_out_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/side_nav_bar"
            android:fontFamily="@font/happymarker"
            android:gravity="center"
            android:padding="15dp"
            android:text="log out"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>


</RelativeLayout>
